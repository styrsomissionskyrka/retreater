{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": ["builtin", "external", "internal", ["parent", "sibling", "index"]]
      }
    ],

    "jsx-a11y/anchor-is-valid": ["error", { "components": ["Link"] }],

    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "react",
            "importNames": ["useLayoutEffect"],
            "message": "Please use useIsomorphicLayoutEffect from \"@fransvilhelm/hooks\" instead. It is necessary since this application is server side rendered and useLayoutEffect does not work on SSR."
          },
          {
            "name": "next/link",
            "importNames": ["default"],
            "message": "Please use Link from \"components/Link\" instead."
          }
        ]
      }
    ]
  }
}
